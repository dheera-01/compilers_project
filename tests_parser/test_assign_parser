from parser_1 import *

def test_parse_assign():
    text = "x = 5; y = 6;"
    obj_parser = Parser.from_lexer(Lexer.from_stream(Stream.from_string(text)))
    assignments = obj_parser.parse_assign()
    assert len(assignments) == 2
    assert isinstance(assignments[0], Assign)
    assert assignments[0].left_part == "x"
    assert assignments[0].right_part == 5
    assert isinstance(assignments[1], Assign)
    assert assignments[1].left_part== "y"
    assert assignments[1].right_part == 6
